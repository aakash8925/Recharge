<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ViewRechargeActivity">

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="170px"
        android:layout_height="200px"
        android:layout_below="@+id/showButton"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="297dp"
        android:layout_marginBottom="10dp"
        android:text="DEL"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/numberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:hint="Enter number"
        android:maxLength="14"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fromDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_text_background"
        android:layout_below="@+id/numberEditText"
        android:hint="Select from date"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/toDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fromDateEditText"
        android:layout_marginTop="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="Select to date"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/showButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toDateEditText"
        android:layout_marginTop="16dp"
        android:text="SHOW"
        android:textSize="18sp" />

    <Button
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="210dp"
        android:onClick="showFilterMenu"
        android:text="Filter" />

    <Button
        android:id="@+id/importButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showButton"
        android:layout_marginTop="3dp"
        android:text="Import"
        android:textSize="15sp" />

    <Button
        android:id="@+id/exportbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showButton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/importButton"
        android:text="Export"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="344dp"
        android:layout_height="380dp"
        android:layout_below="@+id/exportbtn"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/rechargeDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>
</RelativeLayout>
